<%= simple_form_for @event do |f| %>
<%= f.input :title, label: 'Title' %>
<%= f.input :description, label: 'Description', as: :text%>
<%= f.input :location, label: 'Location' %>
<%= f.input :start_time, label: 'Start Time', as: :datetime %>
<%= f.input :end_time, label: 'End Time', as: :datetime %>
<%= f.input :organizer_email, label: 'Organizer Email' %>
<%= f.input :organizer_telegram, label: 'Organizer Telegram' %>
<%= f.input :link, label: 'Link' %>
<%= f.button :submit %>
<% end %>