<h2><%= t('users.header.password_change') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: t('users.label.new_password'),
                required: true,
                autofocus: true,
                hint: (t'(users.hint.minimum_password_length', minimum_password_length: @minimum_password_length) if @minimum_password_length),
                input_html: { autocomplete: "new-passord" } %>
    <%= f.input :password_confirmation,
                label: t('users.label.password_confirm'),
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('users.button.password_change') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
