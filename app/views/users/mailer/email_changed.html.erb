<p><%= t('users.header.email_changed', email: @email)%></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%=t('users.body.email_changed.email_unconfirmed', email: @resource.unconfirmed_email)%></p>
<% else %>
  <p><%=t('users.body.email_changed.email_confirmed', email: @resource.email)%></p>
<% end %>
